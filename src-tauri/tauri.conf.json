  "productName": "NanoSights",
  "version": "0.1.0",
  "identifier": "dev.nanosights.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "https://www.nanosights.dev/sign-in",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "https://www.nanosights.dev/sign-in"
  },
  "app": {
    "windows": [
      {
        "title": "NanoSights",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
